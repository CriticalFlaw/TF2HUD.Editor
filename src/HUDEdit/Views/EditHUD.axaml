<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:HUDEdit.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HUDEdit.Views.EditHUD"
			 x:DataType="vm:EditHUDViewModel">

	<UserControl.Resources>
		<!--<classes:ComboBoxItemsConverterVisibility x:Key="ComboBoxItemsConverterVisibility" />
		<classes:LinkCheckConverterVisibility x:Key="LinkCheckConverterVisibility" />
		<classes:NullCheckConverterVisibility x:Key="NullCheckConverterVisibility" />
		<classes:PresetSelectedStyleConverter x:Key="PresetSelectedStyleConverter" />-->
	</UserControl.Resources>


	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0" Margin="15,5,15,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Label Content="Status" VerticalAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0">
				Status <!--Note: Add Content="{Binding Status}"-->
			</Label>

			<Grid HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
				<!--
				<ItemsControl ItemsSource="{Binding Presets}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<WrapPanel VerticalAlignment="Center" />
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Button
                                Content="{Binding Preset}"
                                Style="{Binding Selected, Converter={StaticResource PresetSelectedStyleConverter}}"
                                FontSize="25"
                                Width="35"
                                Height="35"
                                Margin="1,0"
                                Command="{Binding DataContext.ChangePresetCommand, RelativeSource={RelativeSource AncestorType={x:Type local:EditHUDView}}}"
                                CommandParameter="{Binding Preset}"
                            />
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>-->
			</Grid>

			<WrapPanel HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="2">
				<WrapPanel VerticalAlignment="Center">
					<Label>
						Download <!--Note: Add Content="{lex:Loc ui_download}" Visibility="{Binding Visibility, ElementName=CbBranch}"-->
					</Label>
					<ComboBox Name="CbBranch" Margin="5,0" Padding="5" Height="35" Width="160">
						<!--Note: Add ItemsSource="{Binding Downloads}" SelectedItem="{Binding SelectedDownloadSource}" DisplayMemberPath="Content" Visibility="{Binding Downloads, Converter={StaticResource ComboBoxItemsConverterVisibility}}"-->
					</ComboBox>
				</WrapPanel>
				
				<WrapPanel Margin="0">
					<Button Classes="GitHubButton">
						<!--Note: Add Command="{Binding OpenWebpageCommand}" CommandParameter="{Binding GitHubUrl}" Visibility="{Binding GitHubUrl, Converter={StaticResource LinkCheckConverterVisibility}}"--> 
					</Button>
					<Button Classes="TF2HudsButton">
						<!--Note: Add Command="{Binding OpenWebpageCommand}" CommandParameter="{Binding TF2HudsUrl}" Visibility="{Binding TF2HudsUrl, Converter={StaticResource LinkCheckConverterVisibility}}"-->
						<Image Source="/Assets/Images/tf2huds.png" Margin="5"/>
					</Button>
					<Button Classes="ComfigHudsButton">
						<!--Note: Add Command="{Binding OpenWebpageCommand}" CommandParameter="{Binding ComfigHudsUrl}" Visibility="{Binding ComfigHudsUrl, Converter={StaticResource LinkCheckConverterVisibility}}"-->
						<Image Source="/Assets/Images/mastercomfig.png" Margin="5"/>
					</Button>
					<Button Classes="DiscordButton">
						<!--Note: Add Command="{Binding OpenWebpageCommand}" CommandParameter="{Binding DiscordUrl}" Visibility="{Binding DiscordUrl, Converter={StaticResource LinkCheckConverterVisibility}}"-->
					</Button>
					<Button Classes="SteamButton">
						<!--Note: Add Command="{Binding OpenWebpageCommand}" CommandParameter="{Binding SteamUrl}" Visibility="{Binding SteamUrl, Converter={StaticResource LinkCheckConverterVisibility}}"-->
					</Button>
				</WrapPanel>
			</WrapPanel>
		</Grid>
		<!--<ContentControl Content="{Binding Content}" Grid.Row="1" />-->
	</Grid>
</UserControl>
