<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:HUDEdit.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:DataType="vm:AppInfoViewModel"
             x:Class="HUDEdit.Views.AppInfoView">
	<StackPanel>
		<Image Source="/Assets/Images/banner.png" Height="142" Width="621" />
		<TextBlock Classes="BodyText" FontSize="20" TextAlignment="Center" Margin="0,15,0,15">
			<Run Foreground="#70B04A" Text="Install" />
			<Run Text="and" />
			<Run Foreground="#38F3AB" Text="customize" />
			<Run Text="your favorite Team Fortress 2 HUDs!" />
		</TextBlock>
		<Border Background="#A49E9E" HorizontalAlignment="Stretch" Height="1" />
		<Label Classes="HeaderText" Content="Version 4.0 RC2" Margin="0,15,0,0" FontSize="30" />
		<TextBlock Classes="BodyText">
			<Run Foreground="Red" Text="This is an in-development build. Please report any issues on the GitHub tracker." />
			<LineBreak />
			<Run Text="> Fixed file pathing not working on Linux." />
			<LineBreak />
			<Run Text="> Fixed a crash when trying to open files or links on Linux." />
			<LineBreak />
			<Run Text="> Fixed logs not being saved properly on Linux." />
			<LineBreak />
			<Run Text="> Improved app version checking." />
			<LineBreak />
			<Run Text="> Implemented Avalonia's Message Boxes." />
			<LineBreak />
			<Run Text="> Removed Extended.Wpf.Toolkit." />
			<LineBreak />
			<LineBreak />
		</TextBlock>
	</StackPanel>
</UserControl>
