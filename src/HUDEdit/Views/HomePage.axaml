<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:HUDEdit.ViewModels"
			 xmlns:v="clr-namespace:HUDEdit.Views"
			 xmlns:loc="clr-namespace:HUDEdit.Assets"
			 xmlns:controls="clr-namespace:HUDEdit.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HUDEdit.Views.HomePage"
			 x:DataType="vm:HomePageViewModel">

	<Design.DataContext>
		<vm:HomePageViewModel/>
		<vm:AppInfoViewModel/>
	</Design.DataContext>
	
	<UserControl.Resources>
		<!--<classes:DisplayUniqueHudsOnlyForegroundConverter x:Key="DisplayUniqueHudsOnlyForegroundConverter" />-->
	</UserControl.Resources>

	<HeaderedContentControl Header="Select" Margin="10">
		<Grid Margin="5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="6*" />
				<ColumnDefinition Width="5*" />
			</Grid.ColumnDefinitions>

			<!-- HUD Search List -->
			<Grid Grid.Column="0" Margin="5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="auto" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="auto" />
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>
				<Label Content="{x:Static loc:Resources.ui_search}" Grid.Column="0" Grid.Row="0"/>

				<TextBox Foreground="WhiteSmoke" Background="#2B2724" BorderThickness="2" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="0"/>
				<!--Note: Add Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"-->

				<Button Content="&#x05AE;" FontFamily="Icons" FontSize="25" Padding="5,0" Background="Transparent" BorderThickness="0" Grid.Column="2" Grid.Row="0" Margin="5,0,0,0">Search</Button>
				<!--Note: Add Command="{Binding BtnDisplayUniqueHudsOnly_ClickCommand}" Foreground="{Binding DisplayUniqueHudsOnly, Converter={StaticResource DisplayUniqueHudsOnlyForegroundConverter}}"-->

				<ScrollViewer Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,10,0,0">
					<!--
					<ItemsControl ItemsSource="{Binding HUDListView}">
						<ItemsControl.ItemsPanel>
							<ItemsPanelTemplate>
								<WrapPanel HorizontalAlignment="Center"/>
							</ItemsPanelTemplate>
						</ItemsControl.ItemsPanel>
						<ItemsControl.ItemContainerStyle>
							<Style TargetType="{x:Type ContentPresenter}">
								<Setter Property="Grid.Column" Value="{Binding Column}" />
								<Setter Property="Grid.Row" Value="{Binding Row}" />
							</Style>
						</ItemsControl.ItemContainerStyle>
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<local:HUDButtonView />
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
					-->
				</ScrollViewer>
			</Grid>

			<ScrollViewer VerticalScrollBarVisibility="Hidden" Grid.Column="1" Padding="20">
				<v:AppInfo/>
				<!--<ScrollViewer.Resources>
					
					<DataTempl
					<UserControl.DataTemplate DataType="vm:AppInfoViewModel">
						<v:AppInfo />
					</UserControl.DataTemplate>ate DataType="{x:Type viewmodels:HUDInfoViewModel}">
						<local:HUDInfoView />
					</DataTemplate>
				</ScrollViewer.Resources>
				<ContentControl Content="{Binding Info}" />
					-->
			</ScrollViewer>
		</Grid>
	</HeaderedContentControl>
</UserControl>
