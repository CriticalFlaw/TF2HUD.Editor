<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:HUDEdit.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HUDEdit.Views.HUDButton"
			 x:DataType="vm:HUDButtonViewModel">

	<Border Classes="HudListBorder">
		<Border.KeyBindings>
			<!--
			<KeyBinding
				Command="{Binding DataContext.HighlightHUDCommand, RelativeSource={RelativeSource AncestorType={v:MainWindow}}}"
				CommandParameter="{Binding Hud}"
            />
			<MouseBinding
                MouseAction="LeftDoubleClick"
                Command="{Binding DataContext.SelectHUDCommand, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindowView}}}"
                CommandParameter="{Binding Hud}"
            />-->
		</Border.KeyBindings>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Border Classes="HudListImage" >
				<Border.Background>
					<ImageBrush Source="{Binding Thumbnail}" Stretch="Uniform" AlignmentX="Center" AlignmentY="Center"/>
				</Border.Background>
			</Border>
			<Label Classes="HudListIcon" Content="{Binding Icon}" />
			<Label Classes="HudListLabel" Content="{Binding Name}" Grid.Row="1" />
		</Grid>
	</Border>
</UserControl>
