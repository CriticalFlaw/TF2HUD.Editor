{
  "$schema": "https://raw.githubusercontent.com/CriticalFlaw/TF2HUD.Editor/master/src/TF2HUD.Editor/JSON/Schema/schema.json",
  "Author": "Whisker",
  "Description": "A Team Fortress 2 hud inspired by whayay's yahud and rays' rayshud.",
  "Thumbnail": "https://i.imgur.com/w3ztZdz.png",
  "Screenshots": [
    "https://i.imgur.com/AitQ5wC.png",
    "https://i.imgur.com/eB7U5OB.png",
    "https://i.imgur.com/VnR64vs.jpg",
    "https://i.imgur.com/RsxVFw2.jpeg"
  ],
  "Background": "https://user-images.githubusercontent.com/6818236/130701922-c21590b2-ebb6-47d8-99db-807d6e7a471d.png",
  "Layout": [
    "0 1 2 3",
    "0 1 2 3",
    "4 4 5 5",
    "6 6 7 7"
  ],
  "Links": {
    "Download": "https://github.com/rbjaxter/budhud/archive/master.zip",
    "GitHub": "https://github.com/rbjaxter/budhud",
