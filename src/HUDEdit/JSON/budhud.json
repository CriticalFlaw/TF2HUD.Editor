      {
        "Name": "bh_metal_position",
        "Label": "Metal Count Under XHair",
        "Type": "Checkbox",
        "Value": "false",
        "Files": {
          "_budhud/scripts/hudlayout.res": {
            "CHudAccountPanel": {
              "ypos": {
                "true": "c-3",
                "false": "c110"
              }
            }
          }
        }
