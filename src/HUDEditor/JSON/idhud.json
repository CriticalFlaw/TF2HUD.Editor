{
    "$schema": "https://raw.githubusercontent.com/CriticalFlaw/TF2HUD.Editor/master/src/HUDEditor/JSON/Schema/schema.json",
    "Author": "Eniere, Tiagoquix",
    "Name": "Improved Default HUD",
    "Description": "This is not a custom HUD in its usual meaning; instead, the focus is to add some fixes and improvements for the standard Team Fortress 2 UI, while keeping the style.",
    "Thumbnail": "https://github.com/idhud-tf2/idhud/raw/main/improved_default_hud_banner.png",
    "Screenshots": [
        "https://static.tf2huds.dev/Improved-default-HUD/img/dVBjZia.jpeg",
        "https://static.tf2huds.dev/Improved-default-HUD/img/wHgVSQD.jpeg",
        "https://static.tf2huds.dev/Improved-default-HUD/img/kJ0vgmA.png",
        "https://static.tf2huds.dev/Improved-default-HUD/img/BZkxhx9.jpeg"
    ],
    "Layout": [
        "0 2 2",
        "1 2 2"
    ],
    "Links": {
        "Update": "https://github.com/idhud-tf2/idhud/archive/refs/heads/main.zip",
        "GitHub": "https://github.com/idhud-tf2/idhud",
        "ComfigHuds": "https://comfig.app/huds/page/improved-default-hud/",
        "TF2Huds": "https://tf2huds.dev/hud/Improved-default-HUD"
    },
    "Controls": {
        "Options": [
            {
                "Name": "custom_background",
                "Label": "Custom Background",
                "Type": "CustomBackground",
                "Special": "CustomBackground",
                "ToolTip": "Replace the main menu background with a custom image.",
                "Restart": true
            },
            {
                "Name": "val_killfeed_rows",
                "Label": "Killfeed Rows",
                "Type": "IntegerUpDown",
                "ToolTip": "Change the number of rows seen on the killfeed.",
                "Value": "5",
                "Minimum": "0",
                "Increment": "1",
                "Files": {
                    "scripts/hudlayout.res": {
                        "HudDeathNotice": {
                            "MaxDeathNotices": "$value"
                        }
                    }
                }
            }
        ],
        "Crosshair": [
            {
                "Name": "xhair_style",
                "Label": "Style",
                "ToolTip": "Style of crosshair.",
                "Type": "Crosshair",
                "Value": "<",
                "Files": {
                    "scripts/hudlayout.res": {
                        "CustomCrosshair": {
                            "labelText": "$value"
                        }
                    }
                }
            },
            {
                "Name": "color_xhair_normal",
                "Label": "Crosshair",
                "Type": "ColorPicker",
                "ToolTip": "Default crosshair color.",
                "Value": "255 255 255 255",
                "Files": {
                    "scripts/hudlayout.res": {
                        "CustomCrosshair": {
                            "fgcolor": "$value"
                        }
                    }
                }
            },
            {
                "Name": "val_xhair_size",
                "Label": "Size",
                "Type": "IntegerUpDown",
                "Value": "18",
                "Minimum": "10",
                "Maximum": "30",
                "Increment": "1",
                "ToolTip": "Size of the crosshair.",
                "Files": {
                    "scripts/hudlayout.res": {
                        "CustomCrosshair": {
                            "font": "Size:$value | Outline:OFF"
                        }
                    }
                }
            },
            {
                "Name": "toggle_xhair_enable",
                "Label": "Toggle Crosshair",
                "Type": "Checkbox",
                "ToolTip": "Toggle crosshair feature.",
                "Value": "false",
                "Files": {
                    "scripts/hudlayout.res": {
                        "CustomCrosshair": {
                            "visible": {
                                "true": "1",
                                "false": "0"
                            },
                            "enabled": {
                                "true": "1",
                                "false": "0"
                            }
                        }
                    }
                }
            }
        ],
        "Item Quality": [
            {
                "Name": "color_normal",
                "Label": "Normal",
                "Type": "ColorPicker",
                "Value": "178 178 178 255",
                "Restart": true,
                "Files": {
                    "resource/clientscheme.res": {
                        "Scheme": {
