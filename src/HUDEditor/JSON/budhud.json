        "https://static.tf2huds.dev/budhud/img/AitQ5wC.png",
        "https://static.tf2huds.dev/budhud/img/eB7U5OB.png",
        "https://static.tf2huds.dev/budhud/img/Hhp302v.jpg",
        "https://static.tf2huds.dev/budhud/img/RsxVFw2.jpg"
