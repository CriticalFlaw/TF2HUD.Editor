    "Crosshair": [
      {
        "Name": "tf_toggle_xhair_enable",
        "Label": "Toggle Crosshair",
        "Type": "Checkbox",
        "ToolTip": "Toggle crosshair feature.",
        "Value": "false",
        "Files": {
          "scripts/hudlayout.res": {
            "CustomCrosshair": {
              "visible": {
                "true": "1",
                "false": "0"
              },
              "enabled": {
                "true": "1",
                "false": "0"
              }
            }
          }
        }
      },
      {
        "Name": "tf_toggle_xhair_pulse",
        "Label": "Toggle Hitmarker",
        "Type": "Checkbox",
        "ToolTip": "Toggle hitmarker animation.",
        "Value": "true",
        "Files": {
          "scripts/hudanimations_custom.txt": {
            "uncomment": [
              "Animate CustomCrosshair"
            ]
          }
        }
      },
      {
        "Name": "tf_val_xhair_style",
        "Label": "Style",
        "ToolTip": "Style of crosshair.",
        "Type": "Crosshair",
        "Value": "<",
        "Files": {
          "scripts/hudlayout.res": {
            "CustomCrosshair": {
              "labelText": "$value"
            }
          }
        }
      },
      {
        "Name": "tf_val_xhair_size",
        "Label": "Size",
        "Type": "IntegerUpDown",
        "Value": "18",
        "Minimum": "10",
        "Maximum": "30",
        "Increment": "1",
        "ToolTip": "Size of the crosshair.",
        "Files": {
          "scripts/hudlayout.res": {
            "CustomCrosshair": {
              "font": "Size:$value"
            }
          }
        }
      },
      {
        "Name": "tf_color_xhair_normal",
        "Label": "Crosshair",
        "Type": "ColorPicker",
        "ToolTip": "Default crosshair color.",
        "Value": "255 255 255 255",
        "Restart": true,
        "Files": {
          "resource/clientscheme.res": {
            "Scheme": {
              "Colors": {
                "Crosshair": "$value"
              }
            }
          }
        }
      },
      {
        "Name": "tf_color_xhair_pulse",
        "Label": "Hitmarker",
        "Type": "ColorPicker",
        "ToolTip": "Color of crosshair when hitting another player.",
        "Value": "255 0 0 255",
        "Restart": true,
        "Files": {
          "resource/clientscheme.res": {
            "Scheme": {
              "Colors": {
                "Hitmarker": "$value"
              }
            }
          }
        }
      }
